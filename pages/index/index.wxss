/* pages/index/index.wxss */
.temp{
  font-size: 200rpx;
  text-align: center;
  line-height: 280rpx;
}

.weather{
  font-size: 40rpx;
  text-align: center;
  line-height: 56rpx;
}

.weather-wrapper{
  padding-top: 174rpx;
  padding-bottom: 250rpx;
  position: relative
}

.weather-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1
}

.timetips{
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  justify-content: center;
  margin-bottom: 45rpx;
}

.timetips-icon{
  width: 36rpx;
  height: 28rpx;
}

.timetips-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.6;
}

.forecast-list{
  display: flex;
}

.forecast-item{
  display:flex;
  width: 120rpx;
  flex-shrink: 0;
  font-size: 36rpx;
  line-height: 42rpx;
  flex-direction:column;
  align-items:center;
}

.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-weather {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-temp {
  font-size: 40rpx;
  line-height: 56rpx;
}

.today-date{
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

.today-temp{
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

.today-icon{
  width: 13rpx;
  height: 24rpx;
}

/* 重要CSS设置，可以直接调用 */
.today-wrapper{
  display: flex;
  align-items: center;
  position: absolute;
  bottom:0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}

.location{
  text-align: center;
  font-size: auto;
  margin-top: auto;
}